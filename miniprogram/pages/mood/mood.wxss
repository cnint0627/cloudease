/* pages/community/community.wxss */
.head{
  color:rgba(98, 105, 164, 0.71);
  height:50rpx;
  font-size: 40rpx;
  font-weight: 500;
  margin-left:60rpx;
}

.arrow{
  vertical-align: middle;
  margin-right: 20rpx;
  width: 21rpx;
  height: 40rpx;
  margin-bottom: 5rpx;
}

.img{
  margin-left:165rpx;
  width: 420rpx;
  margin-top:160rpx;
  height:480rpx;
}

.text{
  margin-left: 60rpx;
  margin-right:60rpx;
  margin-top:50rpx;
  text-align: center;
  font-size: 32rpx;
  line-height: 90rpx;
  font-family: Arial, Helvetica, sans-serif;
}

.content{
  position: fixed;
  display: flex;
  margin-top:70rpx;
  background-color: white;
  left:60rpx;
  width:630rpx;
  border-radius: 10rpx;
  height:calc(100% - 550rpx);
  box-shadow: 0 5rpx 6rpx 4rpx rgba(0,0,0,0.2);
}
.tiny{
  width:270rpx;
  height:360rpx;
  position: absolute;
  right: 0;
  bottom: 0;
}

.btn-choose-image{
  position: absolute;
  bottom: 30rpx;
  left:0;
  z-index: 99;
}


.textarea{
  height:calc(100% - 80rpx);
  margin-top:60rpx;
  margin-left:50rpx;
  width:550rpx;
}

.btn-plane{
  position: fixed;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  font-family: Arial, Helvetica, sans-serif;
  font-weight: 500;
  background: white;
  bottom:120rpx;
  height: 80rpx;
  border-radius: 15rpx;
  padding: 0 0;
}



