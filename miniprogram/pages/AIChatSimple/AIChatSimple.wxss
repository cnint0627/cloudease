/* pages/AIChat/AIChat.wxss */


.head{
  color:#888EBE;
  height:50rpx;
  font-size: 40rpx;
  font-weight: 500;
  margin-left:60rpx;
}

.arrow{
  margin-bottom: 5rpx;
  vertical-align: middle;
  margin-right: 20rpx;
  width: 21rpx;
  height: 40rpx;
}
.chat-container{
  margin-top:30rpx;
  width: 100%;
  height:77%;
  position: fixed;
  display: flex;
  flex-direction: column;
  overflow-y: scroll;
}

.form{
  z-index: 99;
  width:750rpx;
  position: fixed;
  bottom: 50rpx;
  display:flex;
  flex-direction: row;
  height: 5%;
}

.textarea{
  position: absolute;
  left:20rpx;
  width: 520rpx;
  height: 70%;
  line-height: 35rpx;
  margin:10rpx;
  background-color: white;
  border-radius: 10rpx;
  padding:10rpx 10rpx;
}

.sendbtn{
position: absolute;
right:20rpx;
background-color: lightgreen;
color: white;
height:73rpx;
margin-top:10rpx;
padding: 0 0;
line-height: 73rpx;
}

.userMsg{
  position: relative;
  float: right;
  border-radius: 20rpx;
  padding: 20rpx;
  background-color:greenyellow;
  margin-right: 35rpx;
  max-width: 70%;
  text-align: right;
  word-wrap: break-word;
}

.box{
  display: inline-block;
  line-height: 50rpx;
  width: 100%;
  margin-top:15rpx;
  margin-bottom: 15rpx;
}

.avatar{
  background-color: white;
  width: 90rpx;
  height: 90rpx;
  border-radius: 20rpx;
}


.AIMsg{
  position: relative;
  float:left;
  border-radius: 20rpx;
  padding: 20rpx;
  background-color:white;
  margin-left:35rpx;
  max-width: 70%;
  text-align: left;
}



.AIMsg .arrow-AI {
 position:absolute;
 top:26rpx;
 left:-30rpx;
 width:0;
 height:0;
 font-size:0;
 border:solid 18rpx;
 border-color:transparent white transparent transparent;
}

.userMsg .arrow-user {
  position:absolute;
  top:26rpx;
  right:-30rpx;
  width:0;
  height:0;
  font-size:0;
  border:solid 18rpx;
  border-color:transparent transparent transparent greenyellow;
 }




