/* pages/index/index.wxss */

.bg-img{
  display: flex;
  width: 100%;
  height: 50%;
  position: fixed;


}

.img{
  width: 100%;
  height: 100%;
  position:relative;
  left: 0;
  top: 0;
  
  
}

.day{
  line-height: 160rpx;
  text-align: justify;
  right: 5%;
  position: absolute;
  color:#f6f6f6;
  font-size:240rpx;
  bottom:0;
  font-weight:bold;
  font-family:Arial, Helvetica, sans-serif;
}



.text{
  position: fixed;
  width: 80%;
  height: 50%;
  top:60%;
  left:10%;
  color: #888BA8;
}

.date{
  position: relative;
  top:0;
  left:0;
  font-size: 28rpx;
  font-weight: 600;
  font-family: Arial, Helvetica, sans-serif;
}
::-webkit-scrollbar{
  display: none;
}

.sentence{
  padding:0 0;
  width:500rpx;
  overflow-y: scroll;
  max-height:calc(50% - 120rpx);
  margin-top: 80rpx;
  margin-left:80rpx;
  line-height: 60rpx;
  letter-spacing: 2rpx;
  font-size:28rpx;
  font-weight: 600;
  font-family: Arial, Helvetica, sans-serif;
  color: #000;
}

.author{
  text-align: right;
  line-height: 100rpx;
  letter-spacing: 2rpx;
  font-size:28rpx;
  font-weight: 700;
  font-family: Arial, Helvetica, sans-serif;
  color: #000;
}

