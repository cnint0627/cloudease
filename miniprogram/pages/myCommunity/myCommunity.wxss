/* pages/myCommunity/myCommunity.wxss */
.head{
  color:#888EBE;
  height:50rpx;
  font-size: 40rpx;
  font-weight: 500;
  margin-left:60rpx;
  margin-bottom: 30rpx;
}

.arrow{
  margin-bottom: 5rpx;
  vertical-align: middle;
  margin-right: 20rpx;
  width: 21rpx;
  height: 40rpx;
}
.tip{
  color:#888BA8;
  font-size: 26rpx;
  margin-top: 40rpx;
  width: 100%;
  text-align: center;
}
.myPost{
  position: relative;
  margin-left:60rpx;
  margin-right: 60rpx;
  margin-top:25rpx;
  background-color: white;
  height:180rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  padding: 10rpx 10rpx;
  box-shadow: 0 5rpx 6rpx 2rpx rgba(0,0,0,0.2);
}

.title{
  display: flex;
  margin-top:30rpx;
  margin-left: 40rpx;
  font-size: 34rpx;
  font-weight: 600;
}

.new-comment{
  color:red;
  margin-left:30rpx;
  font-size:24rpx;
}

.content{
  font-size: 26rpx;
  margin-left: 40rpx;
  color:#9D9D9D;
}

.date{
  position: absolute;
  top:40rpx;
  right:30rpx;
  color:#888BA8;
}

