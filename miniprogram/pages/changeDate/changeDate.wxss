/* pages/changeDate/changeDate.wxss */
.page {
  overflow:scroll;
  background: linear-gradient(to bottom,#F4FAFF, #F9F9F9);
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  font-family: Arial, Helvetica, sans-serif;
}
.head{
  color:rgba(98, 105, 164, 0.71);
  height:50rpx;
  font-size: 40rpx;
  font-weight: 500;
  margin-left:60rpx;
}


.arrow{
  vertical-align: middle;
  margin-right: 20rpx;
  width: 21rpx;
  height: 40rpx;
  margin-bottom: 5rpx;
}

.date{
  margin-left:60rpx;
  width:300rpx;
  margin-top:80rpx;
  height:80rpx;
}

.picker{
  border-radius: 20rpx;
  width: 100%;
  height:80rpx;
  color:gray;
}
.picker-item{
  padding-left: 20rpx;
  padding-right: 20rpx;
  line-height: 80rpx;
  text-align: center;
  width:100rpx;
}

.circle-container{
  display: grid;
  grid-template-columns: repeat(1,auto);
  justify-content:space-evenly;
}

.index{
  position: relative;
  left:-40rpx;
  margin-top: 80rpx;
  color:#6269A4;
  font-size: 30rpx;
  font-weight: 600;
}

.circle {
  margin-bottom:80rpx;
  margin-top:10rpx;
  width: 520rpx;
  height: 520rpx;
  border-radius: 50%;
  background-color: rgba(218,222,236,0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.circle .point{
  width:20rpx;
  height:20rpx;
  border-radius: 50%;
  background-color: #8991D1;
  position: absolute;
}

/*文字围绕圆形布局*/
.circle .circle-item {
  text-align: center;
  position: absolute;
  left: 230rpx;
  transform-origin: bottom center;
  }
  .circle-item:nth-child(2) {
  transform: rotate(0deg) translateY(-250rpx) rotate(0deg);
  }
  .circle-item:nth-child(3) {
  transform: rotate(51.4285deg) translateY(-250rpx) rotate(-51.4285deg);
  }
  .circle-item:nth-child(4) {
  transform: rotate(102.8571deg) translateY(-250rpx) rotate(-102.8571deg);
  }
  .circle-item:nth-child(5) {
  transform: rotate(154.2857deg) translateY(-250rpx) rotate(-154.2857deg);
  }
  .circle-item:nth-child(6) {
  transform: rotate(205.7142deg) translateY(-250rpx) rotate(-205.7142deg);
  }
  .circle-item:nth-child(7) {
  transform: rotate(257.1428deg) translateY(-250rpx) rotate(-257.1428deg);
  }
  .circle-item:nth-child(8) {
  transform: rotate(308.5714deg) translateY(-250rpx) rotate(-308.5714deg);
  }

  .emoji{
    position: absolute;
    top:50rpx;
    left:-30rpx;
    width:120rpx;
    height:120rpx;
  }